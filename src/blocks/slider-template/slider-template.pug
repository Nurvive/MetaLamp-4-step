include ../slider-block/slider-block

mixin slider-template({checkedButtons=[false,false,false]} = {})
    .slider-template
        div.slider-template__inner
            label
                input(type="number" data-type='min')
                span min
            label
                input(type="number" data-type='max')
                span max
            label
                input(type="number" data-type='step' value="1" step="0.1")
                span step
            label
                input(type="number" data-type='to')
                span to
            label
                input(type="number" data-type='from')
                span from
        div.slider-template__inner
            label
                -const [isChecked1, isChecked2, isChecked3] = checkedButtons
                input(type="checkbox" data-type='vertical' checked = isChecked1)
                span vertical
            label
                input(type="checkbox" data-type='range' checked = isChecked2)
                span range
            label
                input(type="checkbox" data-type='bubble' checked = isChecked3)
                span bubble
        +slider()
