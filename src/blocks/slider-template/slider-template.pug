include ../slider/slider

mixin slider-template({checkedButtons=[false,false,false]} = {})
    .slider-template
        div.slider-template__inner
            label
                input(type="number" data-type='min')
                span min
            label
                input(type="number" data-type='max')
                span max
            label
                input(type="number" data-type='step' value="1" step="0.1")
                span step
            label
                input(type="number" data-type='to')
                span to
            label
                input(type="number" data-type='from')
                span from
        div.slider-template__inner
            label
                -const ch1 = checkedButtons[0]
                input(type="checkbox" data-type='vertical' checked = ch1)
                span vertical
            label
                -const ch2 = checkedButtons[1]
                input(type="checkbox" data-type='range' checked = ch2)
                span range
            label
                -const ch3 = checkedButtons[2]
                input(type="checkbox" data-type='bubble' checked = ch3)
                span bubble
        +slider()
