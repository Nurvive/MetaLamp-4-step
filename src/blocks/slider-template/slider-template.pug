include ../slider-block/slider-block

mixin slider-template({checkedButtons=[false,false,false]} = {})
    .slider-template
        div.slider-template__inner
            label
                input.slider-template__inner-input-min.js-slider-template__inner-input-min(type="number")
                span min
            label
                input.slider-template__inner-input-max.js-slider-template__inner-input-max(type="number")
                span max
            label
                input.slider-template__inner-input-step.js-slider-template__inner-input-step(type="number" value="1" step="0.1")
                span step
            label
                input.slider-template__inner-input-to.js-slider-template__inner-input-to(type="number" step="1")
                span to
            label
                input.slider-template__inner-input-from.js-slider-template__inner-input-from(type="number" step="1")
                span from
        div.slider-template__inner
            label
                -const [isCheckedVerticalButton, isCheckedRangeButton, isCheckedBubbleButton] = checkedButtons
                input.slider-template__inner-input-vertical.js-slider-template__inner-input-vertical(type="checkbox" checked = isCheckedVerticalButton)
                span vertical
            label
                input.slider-template__inner-input-range.js-slider-template__inner-input-range(type="checkbox" checked = isCheckedRangeButton)
                span range
            label
                input.slider-template__inner-input-bubble.js-slider-template__inner-input-bubble(type="checkbox" checked = isCheckedBubbleButton)
                span bubble
        +slider()
